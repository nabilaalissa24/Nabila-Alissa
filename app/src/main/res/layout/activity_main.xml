<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1"
        tools:context="id.sch.smktelkom_mlg.xirpl6022.daftarlombaosu.MainActivity">

        <TextView
            android:id="@+id/daftar"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:text="Form Pendaftaran Lomba OSU!"
            android:textAlignment="center"
            android:textColor="@color/Magenta"
            android:textSize="18dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_weight="0.03"
            android:background="#00ffffff"
            android:foreground="#00ffffff"
            android:src="@drawable/logo" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.03"></RadioGroup>

        <TextView
            android:id="@+id/textViewUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:text="Username" />

        <EditText
            android:id="@+id/editTextUser"
            android:layout_width="158dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewJK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:text="Jenis Kelamin" />

        <RadioGroup
            android:id="@+id/radioGroupStatus"
            android:layout_width="142dp"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButtonL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Laki-Laki" />

            <RadioButton
                android:id="@+id/radioButtonP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Perempuan" />
        </RadioGroup>

        <TextView
            android:id="@+id/textViewMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:text="Mode" />

        <CheckBox
            android:id="@+id/checkBoxS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:checked="false"
            android:text="OsuStd" />

        <CheckBox
            android:id="@+id/checkBoxC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:checked="false"
            android:text="OsuCatchTheBeat" />

        <CheckBox
            android:id="@+id/checkBoxT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:checked="false"
            android:text="OsuTaiko" />

        <CheckBox
            android:id="@+id/checkBoxM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:checked="false"
            android:text="OsuMania" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:text="Asal" />

        <Spinner
            android:id="@+id/spinnerAsal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/asal" />

        <Button
            android:id="@+id/buttonOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:text="Daftar" />

        <TextView
            android:id="@+id/textViewHasil"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            tools:text="Hasil" />

        <TextView
            android:id="@+id/textViewHasilJ"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            tools:text="HasilJ" />

        <TextView
            android:id="@+id/textViewHasilM"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            tools:text="HasilM" />

        <TextView
            android:id="@+id/textViewHasilA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HasilA" />

    </LinearLayout>
</ScrollView>